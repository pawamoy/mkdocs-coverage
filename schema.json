{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "MkDocs plugin to integrate your coverage HTML report into your site.",
  "oneOf": [
    {
      "markdownDescription": "https://pawamoy.github.io/mkdocs-coverage",
      "enum": [
        "coverage"
      ]
    },
    {
      "type": "object",
      "properties": {
        "coverage": {
          "markdownDescription": "https://pawamoy.github.io/mkdocs-coverage",
          "type": "object",
          "properties": {
            "page_name": {
              "title": "The name of the page (file) where the coverage report is integrated.",
              "type": "string",
              "default": "coverage"
            },
            "html_report_dir": {
              "title": "The path to the HTML report directory generated by coverage.",
              "type": "string",
              "default": "htmlcov",
              "format": "path"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  ]
}